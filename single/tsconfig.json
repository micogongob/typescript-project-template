{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "paths": {
      "*": ["./src/*"]
    },
    "strict": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
