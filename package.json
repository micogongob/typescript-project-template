{
    "name": "@local/typescript-project-template",
    "version": "0.0.0",
    "private": true,
    "packageManager": "yarn@3.2.0",
    "workspaces": [
        "libs/*",
        "apps/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "lint": "turbo run lint",
        "fmt": "turbo run fmt",
        ".env": "turbo run .env",
        "run_app": "cd apps/typescript-project-app && npm start"
    },
    "devDependencies": {
        "eslint": "^8.26.0",
        "nodemon": "^2.0.20",
        "turbo": "^1.7.0",
        "typescript": "^4.9.5"
    }
}
