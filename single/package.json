{
  "name": "typescript-project-template",
  "version": "1.0.0-dev",
  "scripts": {
    "build": "npm run ts-build",
    "ts-build": "rm -rf dist && tsc",
    "test": "npm run ts-mocha",
    "js-mocha": "nyc --reporter=html mocha -r dotenv/config --exit 'tests/**/*.spec.js'",
    "ts-mocha": "nyc --reporter=html mocha -r ts-node/register -r dotenv/config --exit 'tests/**/*.spec.ts'",
    "lint": "eslint src --ext .ts",
    "fmt": "eslint src --ext .ts --fix",
    "start": "npm run ts-run",
    "ts-run": "DEBUG=app,app:* nodemon -r dotenv/config ./src/index.ts"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.4",
    "@types/proxyquire": "^1.3.28",
    "@types/ramda": "^0.29.1",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.41.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "proxyquire": "^2.1.3",
    "ramda": "^0.29.0",
    "sinon": "^15.1.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
