{
    "name": "@local/core",
    "version": "1.0.0-dev",
    "private": true,
    "main": "./dist/server.js",
    "scripts": {
        "build": "npm run ts-build",
        "ts-build": "rm -rf dist && tsc",
        "test": "npm run ts-mocha",
        "js-mocha": "nyc --reporter=html mocha -r dotenv/config --exit 'tests/**/*.spec.js'",
        "ts-mocha": "nyc --reporter=html mocha -r ts-node/register -r dotenv/config --exit 'tests/**/*.spec.ts'",
        "start": "npm run ts-run",
        "ts-run": "DEBUG=app,app:* nodemon -r dotenv/config ./src/index.ts",
        "lint": "eslint src --ext .ts",
        "fmt": "eslint src --ext .ts --fix",
        ".env": "cp -f .env.example .env"
    },
    "dependencies": {
        "@local/common-dependencies": "workspace:^",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@local/config-eslint": "workspace:^",
        "@local/config-typescript": "workspace:^",
        "@local/dev-dependencies": "workspace:^",
        "@types/express": "^4.17.17"
    }
}
