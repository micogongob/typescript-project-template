{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "*": ["./src/*"]
        },
        "strict": true,
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "sourceMap": true
    }
}
