{
    "compilerOptions": {
        "strict": true,
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "target": "es6",
        "module": "commonjs",
        "paths": {
            "*": [
                "./src/*"
            ]
        },
        "esModuleInterop": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "sourceMap": true
    }
}
