{
    "name": "@local/commons",
    "version": "0.0.0",
    "private": true,
    "main": "src/index.ts",
    "exports": {
        "transpiled": "./dist/index.js",
        "default": "./src/index.ts"
    },
    "scripts": {
        "build": "npm run ts-build",
        "ts-build": "rm -rf dist && tsc",
        "test": "npm run mochaTestTS",
        "js-mocha": "nyc --reporter=html mocha 'test/**/*.spec.js'",
        "ts-mocha": "nyc --reporter=html mocha -r ts-node/register 'test/**/*.spec.ts'",
        "build-lib": "npm run build",
        "prestart": "npm run build",
        "lint": "eslint . --ext .ts",
        "fmt": "eslint . --ext .ts --fix"
    },
    "devDependencies": {
        "@local/config-eslint": "workspace:^",
        "@local/config-mocha": "workspace:^",
        "@local/config-typescript": "workspace:^"
    }
}
